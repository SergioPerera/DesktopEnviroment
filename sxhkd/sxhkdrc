#
# wm independent hotkeys
#

# terminal emulator
super + Return
	/opt/kitty/bin/kitty

# Launch vsc
super + shift + c 
  /usr/bin/chromium

# program launcher
super + d 
	/usr/bin/rofi -show run

super + shift + f
	/usr/bin/firefox

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm (moved to avoid collision with desktops)
super + ctrl + shift + q
	bspc quit
super + ctrl + shift + r
	bspc wm -r

# close and kill (moved to avoid collision with desktops)
super + ctrl + w
	bspc node -c
super + ctrl + shift + w
	bspc node -k

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state (t bindings moved to avoid collision with desktops)
super + ctrl + t
	bspc node -t tiled
super + ctrl + shift + t
	bspc node -t pseudo_tiled
super + s
	bspc node -t floating
super + f
	bspc node -t fullscreen

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

#
# desktops (5) via q w e r t
#

# change to desktop 1..5
super + {q,w,e,r,t}
	bspc desktop -f '^{1,2,3,4,5}'

# send focused node to desktop 1..5
super + shift + {q,w,e,r,t}
	bspc node -d '^{1,2,3,4,5}'

# (Removed old F1â€“F10 desktop binds and numeric examples)

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Custom resize
super + alt + {h,j,k,l}
  ~/.config/bspwm/scripts/bspwm_resize {west,south,north,east}

# Open Explorer (moved to avoid collision with desktops)
super + ctrl + shift + e
  /usr/bin/caja

# Reload python tilde script (moved to avoid collision with desktops)
super + ctrl + alt + t
  pkill -f "python.*/tildes.py"
