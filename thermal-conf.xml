<?xml version="1.0"?>
<ThermalConfiguration>
  <Platform>
    <Name>Override CPU default passive</Name>
    <ProductName>*</ProductName>
    <Preference>QUIET</Preference>
    <ThermalZones>
      <ThermalZone>
        <Type>cpu</Type>
        <TripPoints>
          <!-- Thermal throttling comienza a los 85°C (85,000 miligrados) -->
          <TripPoint>
            <Temperature>70000</Temperature>  <!-- 85°C -->
            <type>passive</type>  <!-- Thermal throttling -->
          </TripPoint>
        </TripPoints>
      </ThermalZone>
    </ThermalZones>
  </Platform>
</ThermalConfiguration>

